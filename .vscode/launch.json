{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OpenResearch Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ai-agent/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ai-agent"
            },
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ai-agent/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ai-agent"
            },
            "args": [
                "--query", "your research query here"
            ],
            "justMyCode": false
        },
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ai-agent"
            }
        }
    ]
}
